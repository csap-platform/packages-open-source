<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>peter</id>
	<baseDirectory>/</baseDirectory>
	<formats>
		<format>zip</format>
	</formats>
	<fileSets>

		<fileSet>
			<fileMode>755</fileMode>
			<lineEnding>unix</lineEnding>
			<directory>scripts</directory>
			<outputDirectory>/scripts</outputDirectory>
		</fileSet>

		<fileSet>
			<fileMode>755</fileMode>
			<lineEnding>unix</lineEnding>
			<directory>jobs</directory>
			<outputDirectory>/jobs</outputDirectory>
		</fileSet>

		<fileSet>
			<fileMode>755</fileMode>
			<lineEnding>unix</lineEnding>
			<directory>mongoJs</directory>
			<outputDirectory>/mongoJs</outputDirectory>
		</fileSet>

		<fileSet>
			<fileMode>755</fileMode>
			<lineEnding>unix</lineEnding>
			<directory>admin</directory>
			<outputDirectory>/admin</outputDirectory>
		</fileSet>
		
		<fileSet>
			<fileMode>755</fileMode>
			<lineEnding>unix</lineEnding>
			<includes>
				<include>pom.xml</include>
			</includes>
			<outputDirectory>/version/${project.version}</outputDirectory>
		</fileSet>
		
		<fileSet>
			<fileMode>755</fileMode>
			<lineEnding>unix</lineEnding>
			<includes>
				<include>csapApi.sh</include>
			</includes>
			<outputDirectory>/</outputDirectory>
		</fileSet>
		
	</fileSets>

</assembly>